<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gmail820castromarcelo.com.jeraestagio.CriarLembrete">

    <TextView
        android:id="@+id/diaLembrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Dia: " />

    <TextView
        android:id="@+id/horaLembrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Hora:"
        android:layout_below="@+id/dataLembrete"
        android:layout_alignEnd="@+id/diaLembrete" />

    <EditText
        android:id="@+id/dataLembrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/diaLembrete"
        android:layout_marginEnd="28dp"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/horarioLembrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/horaLembrete"
        android:layout_alignEnd="@+id/dataLembrete"
        android:ems="10"
        android:inputType="time" />

    <Button
        android:id="@+id/lembrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRMAR"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/horarioLembrete"
        android:layout_marginBottom="126dp" />

    <TextView
        android:id="@+id/selecLivro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/horaLembrete"
        android:layout_marginTop="32dp"
        android:text="Livro:" />

    <EditText
        android:id="@+id/livroLembrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/selecLivro"
        android:layout_alignEnd="@+id/horarioLembrete"
        android:ems="10"
        android:inputType="textPersonName" />
</RelativeLayout>
